@using BLL;
@model BLL.ExpenseTypeDM;
@{
    ViewData["Title"] = "Edit";
}
<br />

<h2 class="text-info">Edit Expense Type</h2>

<style>
    .div-1 {
        background-color: #DCDCDC;
    }
</style>

<form asp-action="Edit" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ExpenseType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ExpenseType" readonly="readonly" class="from-control, div-1" />
            </div>
            <span asp-validation-for="ExpenseType" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Balance"></label>
            </div>
            <div class="col-5">
                <input asp-for="Balance" readonly="readonly" class="from-control, div-1" />
            </div>
            <span asp-validation-for="Balance" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TotalExpenses"></label>
            </div>
            <div class="col-5">
                <input asp-for="TotalExpenses" readonly="readonly" class="from-control, div-1" />
            </div>
            <span asp-validation-for="TotalExpenses" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Expenses"></label>
            </div>
            <div class="col-5">
                <input asp-for="Expenses" class="from-control" />
            </div>
            <span asp-validation-for="Expenses" class="text-danger"></span>
        </div>

        <div class="from-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}

